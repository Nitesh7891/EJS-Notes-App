<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Notes</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-zinc-900 text-white font-sans">

  <!-- Navbar -->
  <header class="bg-zinc-800 shadow-lg sticky top-0 z-50">
    <div class="max-w-5xl mx-auto flex justify-between items-center p-5">
      <h1 class="text-2xl font-bold text-blue-400 tracking-tight">üìù My Notes</h1>
      <p class="text-sm text-zinc-400">Stay organized, stay focused</p>
    </div>
  </header>

  <main class="max-w-5xl mx-auto p-5 md:p-10">
    <!-- Form Section -->
    <section class="mb-10">
      <form action="/edit" method="POST"
        class="bg-zinc-800/60 backdrop-blur-md rounded-xl p-6 shadow-lg border border-zinc-700">

        <!-- Display old title (readonly) -->
        <label class="block text-zinc-400 mb-1">Current Title</label>
        <input
          class="block w-full mb-3 bg-zinc-900 border border-zinc-700 px-4 py-2 rounded-md text-white"
          type="text"
          value="<%= filename.replace('.txt', '') %>"
          readonly>

        <!-- Hidden input for server -->
        <input type="hidden" name="oldTitle" value="<%= filename %>">

        <!-- Editable new title -->
        <label class="block text-zinc-400 mb-1">New Title</label>
        <input
          class="block w-full mb-3 bg-zinc-900 border border-zinc-700 focus:border-blue-500 px-4 py-2 rounded-md outline-none text-white placeholder-zinc-500"
          type="text"
          placeholder="Enter new title"
          name="newTitle"
          value="<%= filename.replace('.txt', '') %>">

        <!-- Description -->
        <label class="block text-zinc-400 mb-1">Description</label>
        <textarea
          class="block w-full bg-zinc-900 border border-zinc-700 focus:border-blue-500 px-4 py-2 rounded-md outline-none text-white placeholder-zinc-500 resize-none h-28"
          placeholder="Write your task..."
          name="description"><%= description %></textarea>

        <!-- Submit -->
        <input
          class="mt-4 w-full bg-blue-600 hover:bg-blue-700 transition-colors text-white font-semibold py-2 px-4 rounded-md cursor-pointer"
          type="submit"
          value="Save Changes">
      </form>
    </section>
  </main>

  <!-- Footer -->
  <footer class="mt-16 text-center text-zinc-600 text-sm pb-6">
    <p>Built with ‚ù§Ô∏è using Node.js, Express & EJS</p>
  </footer>

</body>
</html>
