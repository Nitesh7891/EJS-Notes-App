<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Notes</title>

  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-zinc-900 text-white font-sans">

  <!-- Navbar -->
  <header class="bg-zinc-800 shadow-lg sticky top-0 z-50">
    <div class="max-w-5xl mx-auto flex justify-between items-center p-5">
      <h1 class="text-2xl font-bold text-blue-400 tracking-tight">üìù My Notes</h1>
      <p class="text-sm text-zinc-400">Stay organized, stay focused</p>
    </div>
  </header>

  <main class="max-w-5xl mx-auto p-5 md:p-10">

    <!-- Form Section -->
    <section class="mb-10">
      <form action="/create" method="POST"
        class="bg-zinc-800/60 backdrop-blur-md rounded-xl p-6 shadow-lg border border-zinc-700">
        <h2 class="text-xl mb-4 font-semibold text-blue-400">Add a New Task</h2>
        <input
          class="block w-full mb-3 bg-zinc-900 border border-zinc-700 focus:border-blue-500 px-4 py-2 rounded-md outline-none text-white placeholder-zinc-500"
          type="text" placeholder="Title" name="title">

        <textarea
          class="block w-full bg-zinc-900 border border-zinc-700 focus:border-blue-500 px-4 py-2 rounded-md outline-none text-white placeholder-zinc-500 resize-none h-28"
          placeholder="Write your task..." name="description"></textarea>

        <input
          class="mt-4 w-full bg-blue-600 hover:bg-blue-700 transition-colors text-white font-semibold py-2 px-4 rounded-md cursor-pointer"
          type="submit" value="Add Task">
      </form>
    </section>

    <!-- Tasks Section -->
    <section>
      <h2 class="text-xl font-semibold text-blue-400 mb-5">Your Tasks</h2>

      <div class="task flex flex-wrap gap-6 justify-start">
        <% if(files.length>0){ %>
          <% files.forEach((val)=>{ %>
            <div
              class="task-card bg-zinc-800/70 hover:bg-zinc-800 transition-colors w-72 p-5 rounded-xl shadow-md border border-zinc-700 hover:border-blue-500">
              <h3 class="text-2xl font-semibold tracking-tight truncate"><%= val.replace(".txt","") %></h3>
              <div class="flex items-center justify-between">
                <a href="/file/<%= val %>"
                class="text-blue-400 inline-block hover:text-blue-300 transition-colors hover:underline">Read More ‚Üí</a>
                <a class="text-zinc-600 hover:underline" href="/edit/<%=val%>">Edit</a>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <p class="text-zinc-500 text-sm italic">No tasks yet. Add one above!</p>
        <% } %>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="mt-16 text-center text-zinc-600 text-sm pb-6">
    <p>Built with ‚ù§Ô∏è using Node.js, Express & EJS</p>
  </footer>

</body>
</html>
